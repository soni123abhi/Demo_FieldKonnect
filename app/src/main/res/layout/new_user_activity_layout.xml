<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:id="@+id/relative_timedetails_layout_parent"
            android:layout_width="match_parent"
            android:background="@drawable/blue_capsul_stroke"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative_timedetails_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/iv_user_time"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_user_time" />

                <TextView
                    android:id="@+id/tv_user_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_user_time"
                    android:text="06:46"
                    android:textColor="@color/blue"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_user_punchINPunchOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_user_time"
                    android:text="Punch in "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:text="City Indore ,Today Visit\nLocal Market "
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/relative_timedetails_layout"/>

            <ImageView
                android:id="@+id/iv_user_location"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/tv_user_address"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_user_location_green" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>