<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
            android:id="@+id/linearTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="#304789"
            app:cardCornerRadius="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBack"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_lead_back_blue" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_toRightOf="@+id/cardBack"
                    android:id="@+id/tv_oppoo_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="Task">

                </TextView>


                <ImageView
                    android:id="@+id/ic_notification"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_notification"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="10dp" />


                <RelativeLayout
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lead_noti_count_bg">
                    </ImageView>

                    <TextView
                        android:id="@+id/notification_count"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textSize="9dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="">

                    </TextView>

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/linnnnn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardBack"
                    android:weightSum="2">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/searchBox"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.7"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#182D69"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <EditText
                                android:id="@+id/searchInput"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:hint="Search here"
                                android:background="@android:color/transparent"
                                android:textColorHint="#FFFFFF"
                                android:textColor="#FFFFFF" />

                            <ImageView
                                android:id="@+id/searchIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_search_customer"
                                app:tint="@android:color/white" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/filter"
                        android:layout_toRightOf="@+id/searchBox"
                        android:layout_below="@+id/cardBack"
                        android:layout_alignParentEnd="true"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.3"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_lead_filter" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/linearTop"
        android:background="#e7e7e7"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearbtn"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="2"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_leadtask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginRight="10dp">

                <RelativeLayout
                    android:id="@+id/relll_lead_task"
                    android:background="#182D69"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_lead_task"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="start|center"
                        android:textAlignment="center"
                        android:text="Lead Task"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/card_task_managemnet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginLeft="10dp">

                <RelativeLayout
                    android:id="@+id/relll_task"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_task"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="start|center"
                        android:textAlignment="center"
                        android:text="Task Management"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#182D69" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_task"
            android:layout_below="@+id/linearbtn"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/lead_task_listing_layout"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_task_managment"
            android:layout_below="@+id/linearbtn"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/lead_task_managment_layout"/>


    </RelativeLayout>


</RelativeLayout>
