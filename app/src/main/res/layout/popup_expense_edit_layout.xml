<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:orientation="horizontal">

    <ScrollView
        android:id="@+id/rel_create_expense"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    <RelativeLayout
        android:id="@+id/rell_editt"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

    <TextView
        android:id="@+id/textview_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Expense Detail"
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_close_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:padding="2dp"
        android:src="@drawable/ic_cross_blue" />

    <View
        android:layout_below="@+id/textview_head"
        android:id="@+id/vline1"
        android:background="#EBEBEB"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/vline1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/textview11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Select Expense Type"
                android:singleLine="true"
                android:padding="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />


            <AutoCompleteTextView
                android:id="@+id/edit_edtexpensetype"
                android:layout_below="@+id/textview11"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/edittext_shape_new"
                android:focusable="false"
                android:hint="Select type"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textColor="#000"
                android:drawableRight="@drawable/ic_arrow_spinner"
                android:textColorHint="@color/hintColor"
                android:textSize="14sp"
                android:theme="@style/MyEditTextThemeColor" />


            <TextView
                android:id="@+id/textview1"
                android:layout_below="@+id/edit_edtexpensetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Select Expense Date"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/cardFromm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textview1"
                android:layout_gravity="start"
                android:background="@drawable/edittext_shape_new"
                android:gravity="start">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_calendar_new" />


                <TextView
                    android:id="@+id/edit_tvFrom111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/inter_regular"
                    android:hint="DD-MM-YYYY"
                    android:textColor="#000"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_rel_expenseee"
                android:visibility="gone"
                android:layout_below="@+id/cardFromm">

                <TextView
                    android:id="@+id/textview_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Rate"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#383838"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/edit_tv_claim_rate"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textview_rate"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-5dp"
                    android:enabled="false"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Rate"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/black_87"
                    android:textColorHint="@color/hintColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <View
                    android:id="@+id/view_1"
                    android:layout_below="@+id/edit_tv_claim_rate"
                    android:layout_width="match_parent"
                    android:layout_marginTop="-6dp"
                    android:layout_height="1dp"
                    android:background="@color/black_87"/>

                <TextView
                    android:id="@+id/textview_start_km"
                    android:layout_below="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Start Km"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#383838"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/edit_edt_start_km"
                    android:layout_below="@+id/textview_start_km"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/inter_regular"
                    android:text=""
                    android:hint="km"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textColor="@color/black_87"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textview_stop_km"
                    android:layout_below="@+id/edit_edt_start_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Stop Km"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#383838"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/edit_edt_stop_km"
                    android:layout_below="@+id/textview_stop_km"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/inter_regular"
                    android:text=""
                    android:hint="Km"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textColor="@color/black_87"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textview_total_km"
                    android:layout_below="@+id/edit_edt_stop_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Total Km"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#383838"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/edit_tv_total_km"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textview_total_km"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Km"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/black_87"
                    android:textColorHint="@color/hintColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view_2"
                    android:layout_below="@+id/edit_tv_total_km"
                    android:layout_width="match_parent"
                    android:layout_marginTop="-6dp"
                    android:layout_height="1dp"
                    android:background="@color/black_87"/>

            </RelativeLayout>



            <TextView
                android:id="@+id/textview2"
                android:layout_below="@+id/edit_rel_expenseee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Claim Amount"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edit_tv_claim_amt"
                android:layout_below="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/inter_regular"
                android:drawableLeft="@drawable/ic_rupees"
                android:hint="Total Amt"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textColor="@color/colur_light_blue"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/textview3"
                android:layout_below="@+id/edit_tv_claim_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Expense Note"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_exp_note"
                android:layout_below="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:hint="Enter note"
                android:maxLines="4"
                android:padding="10dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textview4"
                android:layout_below="@+id/edt_exp_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Expense Attachment"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textview41"
                android:layout_below="@+id/edt_exp_note"
                android:layout_toRightOf="@+id/textview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="(Should be less then 5 MB)"
                android:layout_marginLeft="-5dp"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#C53636"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />




            <ListView
                android:id="@+id/listView_attach_edit"
                android:layout_below="@+id/textview4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:divider="@android:color/transparent"
                android:dividerHeight="2dp"
                android:padding="0dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="true"/>

            <ImageView
                android:id="@+id/img_add_attachment_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/listView_attach_edit"
                android:src="@drawable/ic_add_attachment" />



            <androidx.cardview.widget.CardView
                android:id="@+id/textview5"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/listView_attach_edit"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:cardBackgroundColor="@color/colur_dark_blue"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvsubmitt_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Show New Attachment"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>



            <ListView
                android:id="@+id/listView_attach_edit_upload"
                android:layout_below="@+id/textview5"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:divider="@android:color/transparent"
                android:dividerHeight="2dp"
                android:padding="0dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="true"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/edit_card_sub"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_below="@+id/listView_attach_edit_upload"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:cardBackgroundColor="@color/colur_dark_blue"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvsubmitt_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>




        </RelativeLayout>

    </RelativeLayout>


    </ScrollView>

</androidx.cardview.widget.CardView>

