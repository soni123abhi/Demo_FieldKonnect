<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colur_dark_blue"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/textview_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_close"
            android:text="Leave Request"
            android:textAlignment="center"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:src="@drawable/ic_cross_blue" />

        <View
            android:layout_below="@+id/textview_head"
            android:id="@+id/vline122"
            android:background="#EBEBEB"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/tv_leave_bal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vline122"
            android:layout_toLeftOf="@+id/img_close"
            android:text="Leave Balance :"
            android:textAlignment="center"
            android:singleLine="true"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_comb_bal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_leave_bal"
            android:layout_toLeftOf="@+id/img_close"
            android:text="Comp-Off Balance :"
            android:textAlignment="center"
            android:singleLine="true"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_below="@+id/tv_comb_bal"
            android:id="@+id/vline1"
            android:background="#EBEBEB"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:id="@+id/leave_date_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vline1"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        android:text="From"
                        android:textStyle="bold"
                        android:textColor="#383838"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/cardFrom"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_shape_new"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_calendar_new" />


                        <TextView
                            android:id="@+id/tvFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/inter_regular"
                            android:hint="DD-MM-YYYY"
                            android:textColor="#000"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        android:text="To"
                        android:textStyle="bold"
                        android:textColor="#383838"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/cardTo"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_shape_new"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_calendar_new" />

                        <TextView
                            android:id="@+id/tvTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/inter_regular"
                            android:hint="DD-MM-YYYY"
                            android:textColor="#000"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textview110"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_date_filter"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/inter_regular"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Select Balance Type"
            android:textColor="#383838"
            android:textColorHint="@color/hintColor"
            android:textSize="13sp"
            android:textStyle="bold" />


        <AutoCompleteTextView
            android:id="@+id/edtselectleavebal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textview110"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext_shape_new"
            android:drawableRight="@drawable/ic_arrow_spinner"
            android:focusable="false"
            android:fontFamily="@font/inter_regular"
            android:hint="Search Balance"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="@color/hintColor"
            android:textSize="14sp"
            android:theme="@style/MyEditTextThemeColor" />


        <TextView
            android:id="@+id/textview11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtselectleavebal"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/inter_regular"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Select Leave Type"
            android:textColor="#383838"
            android:textColorHint="@color/hintColor"
            android:textSize="13sp"
            android:textStyle="bold" />


        <AutoCompleteTextView
            android:id="@+id/edtselectleave"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textview11"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edittext_shape_new"
            android:drawableRight="@drawable/ic_arrow_spinner"
            android:focusable="false"
            android:fontFamily="@font/inter_regular"
            android:hint="Search Leave"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="@color/hintColor"
            android:textSize="14sp"
            android:theme="@style/MyEditTextThemeColor" />


        <TextView
            android:id="@+id/textview1"
            android:layout_below="@+id/edtselectleave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Remark"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:textColorHint="@color/hintColor"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/edt_leaveremark"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textview1"
            android:background="@drawable/edittext_shape"
            android:fontFamily="@font/inter_regular"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:hint="Enter remark"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:singleLine="true"
            android:textColor="#383838"
            android:textColorHint="@color/hintColor"
            android:textSize="13sp"
            android:textStyle="bold" />





        <androidx.cardview.widget.CardView
            android:id="@+id/cardbtn_submit"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/edt_leaveremark"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@color/colur_dark_blue"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tvsubmitt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>





