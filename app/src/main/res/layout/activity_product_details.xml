<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/linearTop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_back" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cardBack"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Order Report"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/badge_layout1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/relative_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/button1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_commerce" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/relative_layout"
                        android:layout_marginRight="-8dp"
                        android:background="@drawable/item_badge_count"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_colour_two"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tvGG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvOEPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:visibility="gone"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text=""
                    android:textColor="#9F9E9E"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvSpecification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:visibility="gone"
                    android:text=""
                    android:textColor="#9F9E9E"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text=""
                    android:textColor="#9F9E9E"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tvSubCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text=""
                    android:textColor="#9F9E9E"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#9F9E9E"
                    android:textSize="10sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#9F9E9E" />

                <AutoCompleteTextView
                    android:id="@+id/edtDetails"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_shape_new"
                    android:drawableRight="@drawable/ic_arrow_spinner"
                    android:focusable="false"
                    android:hint="Product Detail"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"

                    android:textColor="#000"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_shape_new">

                    <TextView
                        android:id="@+id/tvUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Unit"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:id="@+id/linearAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imgPlus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_plus"
                                android:backgroundTint="@color/black" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="wrap_content">


                            <EditText
                                android:id="@+id/edtCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="4"
                                android:padding="2dp"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imgMinus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_minus_quantity"
                                android:backgroundTint="@color/black" />


                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/relativeAmountDis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/edtPrice"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_shape_new"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Price"
                            android:focusable="false"
                            android:inputType="number"
                            android:maxLines="10"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="@color/hintColor"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/edtAmount"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_shape_new"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Amount"
                            android:inputType="number"
                            android:maxLines="10"
                            android:focusable="false"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="@color/hintColor"
                            android:textSize="14sp" />


                        <EditText
                            android:id="@+id/edtDiscount"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_shape_new"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Discount %"
                            android:inputType="number"
                            android:maxLines="10"
                            android:visibility="gone"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="@color/hintColor"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/edtTax"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_shape_new"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Tax"
                            android:visibility="gone"
                            android:inputType="number"
                            android:focusable="false"
                            android:maxLines="10"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="@color/hintColor"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/edtTotalDiscount"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_shape_new"
                            android:fontFamily="@font/inter_medium"
                            android:hint="Discount Amount"
                            android:inputType="number"
                            android:focusable="false"
                            android:maxLines="10"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="@color/hintColor"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/cbGST"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:text="Without GST"
                            android:textColor="#9F9E9E"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAddToCart"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colur_dark_blue"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Add to Cart"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardcontinueorder"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colur_dark_blue"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Continue order"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>



            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</RelativeLayout>
