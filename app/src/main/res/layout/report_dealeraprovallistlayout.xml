<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:id="@+id/rel_main"
    app:cardCornerRadius="5dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Name"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:text=""
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#837C7C"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dealar_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_name"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#FFC700"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_created_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by"
            android:layout_below="@+id/tv_appointment_date"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#837C7C"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linn_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_created_by"
            android:layout_alignParentEnd="true"
            android:weightSum="2.9"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_certificate"
                android:layout_below="@+id/tv_msg"
                android:layout_toRightOf="@+id/card_edit"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.6"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="invisible"
                app:cardBackgroundColor="@color/colur_dark_blue"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvcertifiacate"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Download Certificate"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_edit"
                android:layout_below="@+id/tv_msg"
                android:layout_toRightOf="@+id/time"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.6"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:cardBackgroundColor="@color/colur_dark_blue"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_below="@+id/tv_msg"
                android:layout_toRightOf="@+id/time"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.7"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:cardBackgroundColor="@color/colur_dark_blue"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>