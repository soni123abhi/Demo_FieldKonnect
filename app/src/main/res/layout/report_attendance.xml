<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    android:weightSum="3"
    app:cardCornerRadius="5dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abhishek Soni"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginRight="50dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_date"
            android:layout_below="@+id/user_name"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:textColor="#8A8A8A"
            android:textSize="14dp"
            android:textStyle="bold" />
        <View
            android:layout_below="@+id/user_date"
            android:id="@+id/vline"
            android:background="#EBEBEB"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <ImageView
            android:id="@+id/report_attendance_view"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_user_view" />
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="28sp"
            android:layout_height="28dp"
            android:layout_toLeftOf="@id/report_attendance_view"
            android:layout_alignTop="@id/report_attendance_view"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:buttonTint="@color/colur_dark_blue" />


        <RelativeLayout
            android:id="@+id/reeell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vline"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="Punch In"
                        android:layout_gravity="start"
                        android:textStyle="bold"
                        android:textColor="#8A8A8A"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/cardFrom"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/tvpunchin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/inter_regular"
                            android:text=""
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        android:text="Punch Out"
                        android:textStyle="bold"
                        android:textColor="#8A8A8A"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/cardTo"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvpunchout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/inter_regular"
                            android:text=""
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        android:text="Status"
                        android:textStyle="bold"
                        android:textColor="#8A8A8A"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="Pending"
                            android:textColor="#FFC700"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>