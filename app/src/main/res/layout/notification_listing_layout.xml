<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/relativeMain"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="8dp"
        android:layout_margin="1dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/linearvisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp">


                <TextView
                    android:id="@+id/tvnoti_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center|start"
                    android:hint="Heading"
                    android:textStyle="bold"
                    android:textColor="#344D89"
                    android:textSize="18sp"
                    android:textColorHint="#716C6C" />

                <View
                    android:id="@+id/vi"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tvnoti_tittle"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="#9F9E9E" />

                <!-- User Name below Firm Name -->
                <TextView
                    android:id="@+id/tvnoti_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vi"
                    android:gravity="center|start"
                    android:layout_marginTop="10dp"
                    android:hint="Message"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="#344D89"
                    android:textSize="14sp"
                    android:textColorHint="#716C6C" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tvnoti_msg"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="#9F9E9E" />


                <TextView
                    android:id="@+id/tvnoti_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v2"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:hint="Date/Time"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="#344D89"
                    android:textSize="14sp"
                    android:textColorHint="#716C6C" />

            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>
