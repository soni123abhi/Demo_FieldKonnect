<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e7e7e7">


    <androidx.cardview.widget.CardView
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="#304789"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBack"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_lead_back_blue" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_toRightOf="@+id/cardBack"
                android:id="@+id/tv_oppoo_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Opportunity">

            </TextView>



            <ImageView
                android:id="@+id/ic_notification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_notification"
                android:layout_marginTop="18dp"
                android:layout_marginRight="10dp" />


            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lead_noti_count_bg">
                </ImageView>

                <TextView
                    android:id="@+id/notification_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="">

                </TextView>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rel_lead_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearTop"
        android:background="#FFF">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_lead_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:itemCount="1"
            tools:listitem="@layout/lead_status_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rell_filtersss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:background="#fff"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/rel_lead_layout">


        <AutoCompleteTextView
            android:id="@+id/edtleaduser"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_shape_new_lead"
            android:focusable="false"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="Select User"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="@color/hintColor"
            android:textSize="14sp"
            android:drawableRight="@drawable/ic_arrow_spinner"
            android:theme="@style/MyEditTextThemeColor" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtleaduser"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:id="@+id/relll_statuss"
                android:layout_width="wrap_content"
                android:background="#334C8B"
                android:padding="5dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_lead_status"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="No Show"
                    android:textColor="@android:color/white" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_oppoo_count"
            android:layout_below="@+id/card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@android:color/black" />


        <LinearLayout
            android:id="@+id/linnnnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/tv_oppoo_count">

            <TextView
                android:id="@+id/tv_oppoo_valueee"
                android:layout_below="@+id/tv_oppoo_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:textAlignment="textStart"
                android:text="Total Value"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/tv_oppoo_price"
                android:layout_below="@+id/tv_oppoo_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black" />

        </LinearLayout>


    </RelativeLayout>


    <View
        android:id="@+id/vvvvv"
        android:layout_width="match_parent"
        android:layout_below="@+id/rell_filtersss"
        android:layout_marginTop="0dp"
        android:layout_height="0.5dp"
        android:background="#9F9E9E"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_oppoo"
        android:layout_below="@+id/vvvvv"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/opportunity_listing_layout"/>


</RelativeLayout>
