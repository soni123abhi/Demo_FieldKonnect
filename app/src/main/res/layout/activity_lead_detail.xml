<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#e7e7e7"
        android:layout_height="match_parent">


    <RelativeLayout
            android:id="@+id/rel_head"
            android:layout_width="match_parent"
            android:paddingBottom="55dp"
            android:background="#395299"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBack_detail"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_lead_back_blue" />

            </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/ic_notification"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_notification"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp" />


        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lead_noti_count_bg">
            </ImageView>

            <TextView
                android:id="@+id/notification_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textSize="9dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="">

            </TextView>

        </RelativeLayout>



        </RelativeLayout>

    <ImageView
        android:id="@+id/ic_logo"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_lead_detail_pro"
        android:visibility="visible"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/rel_head"/>

    <TextView
        android:id="@+id/ic_logo_name"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:visibility="visible"
        android:hint="A"
        android:textColorHint="@color/grey_light"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/rel_head"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/carddddd_editt"
        android:layout_width="90dp"
        android:background="#F2F2F4"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rel_head"
        android:layout_height="40dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/relll_statuss"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/oppppp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_lead_edit" />


            <TextView
                android:id="@+id/opportunityBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/oppppp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Edit"
                android:textColor="#395299" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/carddddd_editt"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relll_mainn"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_firm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:hint="Firm Name"
                android:textColorHint="#716C6C"
                android:textStyle="bold"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@+id/tv_firm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:hint="User Name"
                android:textColorHint="#716C6C"
                android:textColor="#8A8A8A" />


            <TextView
                android:id="@+id/tv_url"
                android:layout_below="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:hint="Website"
                android:textColorHint="#716C6C"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#00ACD8" />


            <RelativeLayout
                android:id="@+id/rell_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_url"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lead_mob"
                    android:fontFamily="@font/inter_medium"
                    android:drawablePadding="20dp"
                    android:textSize="16dp"
                    android:hint="Mobile Number"
                    android:textColorHint="#716C6C"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textColor="#3C3C3C" />


                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_mob"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Email"
                    android:textColorHint="#716C6C"
                    android:drawableLeft="@drawable/ic_lead_emaill"
                    android:drawablePadding="20dp"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textColor="#3C3C3C" />


                <TextView
                    android:id="@+id/tv_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_email"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Address"
                    android:textColorHint="#716C6C"
                    android:drawableLeft="@drawable/ic_lead_location"
                    android:drawablePadding="20dp"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:textColor="#3C3C3C" />


                <TextView
                    android:id="@+id/tv_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_below="@+id/tv_loc"
                    android:drawableLeft="@drawable/ic_lead_location"
                    android:drawablePadding="20dp"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    android:hint="Pin Code"
                    android:textColorHint="#716C6C"
                    android:textColor="#3C3C3C" />


            </RelativeLayout>


            <View
                android:id="@+id/viewww111"
                android:layout_below="@+id/rell_infor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#9F9E9E" />

            <RelativeLayout
                android:id="@+id/rel_source"
                android:layout_width="match_parent"
                android:layout_below="@+id/viewww111"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearheaddd"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvmobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/inter_regular"
                        android:text="Lead Type"
                        android:textColor="#4B4B4B"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tvaddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/inter_regular"
                        android:text="Lead Source"
                        android:textColor="#4B4B4B"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearh2"
                    android:layout_below="@+id/linearheaddd"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/edtleadtype"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/edittext_shape_new"
                        android:fontFamily="@font/inter_regular"
                        android:focusable="false"
                        android:paddingLeft="10dp"
                        android:drawablePadding="10dp"
                        android:paddingRight="20dp"
                        android:layout_marginRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:hint="Lead Type"
                        android:drawableLeft="@drawable/ic_lead_type"
                        android:textColorHint="#716C6C"
                        android:drawableRight="@drawable/ic_arrow_spinner"
                        android:textSize="14sp"
                        android:theme="@style/MyEditTextThemeColor" />


                    <AutoCompleteTextView
                        android:id="@+id/edtleadsource"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="10dp"
                        android:background="@drawable/edittext_shape_new"
                        android:focusable="false"
                        android:fontFamily="@font/inter_regular"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:drawableLeft="@drawable/ic_lead_type"
                        android:hint="Lead Source"
                        android:textColorHint="#716C6C"
                        android:textSize="14sp"
                        android:theme="@style/MyEditTextThemeColor" />



                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/tvuser_notee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_source"
                android:minHeight="40dp"
                android:drawableLeft="@drawable/ic_lead_note"
                android:drawablePadding="8dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:hint="Note"
                android:textColorHint="#716C6C"
                android:fontFamily="@font/inter_regular"
                android:textColor="#4B4B4B"
                android:textSize="14sp" />


            <LinearLayout
                android:id="@+id/linearbtn"
                android:layout_below="@+id/tvuser_notee"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_checkin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginRight="10dp">

                    <RelativeLayout
                        android:id="@+id/relll_check_in"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_check_in"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="start|center"
                            android:drawablePadding="15dp"
                            android:paddingLeft="15dp"
                            android:drawableLeft="@drawable/ic_lead_checkin_not"
                            android:text="Check In"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#00ACD8" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/card_checkout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginLeft="10dp">

                    <RelativeLayout
                        android:id="@+id/relll_check_out"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_checkout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="start|center"
                            android:drawablePadding="15dp"
                            android:paddingLeft="15dp"
                            android:drawableLeft="@drawable/ic_lead_checkout_not"
                            android:text="Check Out"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#00ACD8" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearacc"
                android:layout_below="@+id/linearbtn"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:weightSum="4"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_activity"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_lead_activity">
                </ImageView>

                <ImageView
                    android:id="@+id/img_note"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_lead_noteee">
                </ImageView>

                <ImageView
                    android:id="@+id/img_task"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_lead_task">
                </ImageView>

                <ImageView
                    android:id="@+id/img_opportunity"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_lead_opportunity">
                </ImageView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lineardatess"
                android:layout_below="@+id/linearacc"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:weightSum="3"
                android:layout_height="80dp">

                <RelativeLayout
                    android:id="@+id/relll_lead_date"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_shape_lead"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/lead_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="Lead Generation"
                        android:textColor="#4B4B4B"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_lead_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lead_tv"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_lead_date"
                        android:drawablePadding="3dp"
                        android:fontFamily="@font/inter_medium"
                        android:hint="N/A"
                        android:textColorHint="#716C6C"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="normal" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relll_last_action"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_shape_lead"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/action_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="Last Action"
                        android:textColor="#4B4B4B"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_action_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/action_tv"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_lead_date"
                        android:drawablePadding="3dp"
                        android:hint="N/A"
                        android:textColorHint="#716C6C"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="normal" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relll_convvvv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_shape_lead"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/connnn_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="Converted"
                        android:textColor="#4B4B4B"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_converted_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/connnn_tv"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_lead_date"
                        android:drawablePadding="3dp"
                        android:hint="N/A"
                        android:textColorHint="#716C6C"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="normal" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    </RelativeLayout>



</RelativeLayout>