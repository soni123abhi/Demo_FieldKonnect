<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/relativeMain"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="8dp"
        android:layout_margin="1dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearvisit"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:weightSum="3"
                android:layout_height="wrap_content">
                
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.4"
                    android:src="@drawable/ic_lead_opoo_detail">

                </ImageView>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tvcompany_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_medium"
                        android:textStyle="bold"
                        android:textColor="#4B4B4B"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_note"
                        android:layout_below="@+id/tvcompany_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_medium"
                        android:textStyle="bold"
                        android:textColor="#4B4B4B"
                        android:textSize="15sp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="0.3"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_lead_edit"
                        android:contentDescription="Edit" />

                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.3"
                        android:src="@drawable/ic_lead_delete"
                        android:contentDescription="Delete" />

                </LinearLayout>



            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="0.5dp"
                android:background="#9F9E9E"/>

            <LinearLayout
                android:id="@+id/lineardeee"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:weightSum="3"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.4"
                    android:src="@drawable/ic_lead_opoo_detail">

                </ImageView>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2.6">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_medium"
                        android:textStyle="bold"
                        android:textColor="#4B4B4B"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_below="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_medium"
                        android:textStyle="normal"
                        android:textColor="#5E5E5E"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_assign"
                        android:layout_below="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_medium"
                        android:textStyle="normal"
                        android:textColor="#5E5E5E"
                        android:textSize="15sp" />

                </RelativeLayout>



            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>
