<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e7e7e7">


    <androidx.cardview.widget.CardView
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="#304789"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBack"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_lead_back_blue" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_lead_logo"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cardBack"/>


            <ImageView
                android:id="@+id/ic_notification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_notification"
                android:layout_marginTop="18dp"
                android:layout_marginRight="10dp" />


            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lead_noti_count_bg">
                </ImageView>

                <TextView
                    android:id="@+id/notification_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="">

                </TextView>

            </RelativeLayout>




        <androidx.cardview.widget.CardView
            android:id="@+id/searchBox"
            android:layout_width="220dp"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/cardBack"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#182D69"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="Search here"
                android:background="@android:color/transparent"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_customer"
                app:tint="@android:color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_opoo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardBack"
                android:layout_toRightOf="@+id/searchBox"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="110dp"
                    android:background="@color/green"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/oppppp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_opportunity" />


                    <TextView
                        android:id="@+id/opportunityBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@+id/oppppp"
                        android:backgroundTint="@color/green"
                        android:layout_marginTop="10dp"
                        android:text="Opportunity"
                        android:textColor="@android:color/white" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/filter"
                android:layout_toRightOf="@+id/card_opoo_btn"
                android:layout_below="@+id/cardBack"
                android:layout_alignParentEnd="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_lead_filter" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rel_lead_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearTop"
        android:background="#FFF">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_lead_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:itemCount="1"
            tools:listitem="@layout/lead_status_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_useractivity"
        android:layout_below="@+id/rel_lead_layout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/lead_listing_layout"/>


    <ImageView
        android:id="@+id/img_create"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_add_blue2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
