<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ExpenseFragment"
    android:orientation="vertical"
    android:background="@color/bg_colour_two">

    <FrameLayout
        android:id="@+id/fragment_container_expense"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/linearTop_expense"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBack_expense"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_back" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTitle_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cardBack_expense"
                android:fontFamily="@font/inter_semibold"
                android:text="Expense"
                android:textColor="#000"
                android:textSize="14sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rel_main_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        android:layout_below="@+id/linearTop_expense">

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Select Expense Type"
            android:singleLine="true"
            android:padding="5dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:textColorHint="@color/hintColor"
            android:textSize="13sp" />


        <AutoCompleteTextView
            android:id="@+id/edtexpensetypelist"
            android:layout_below="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edittext_shape_new"
            android:focusable="false"
            android:hint="Search expense type"
            android:fontFamily="@font/inter_regular"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="#000"
            android:drawableRight="@drawable/ic_arrow_spinner"
            android:textColorHint="@color/hintColor"
            android:textSize="14sp"
            android:theme="@style/MyEditTextThemeColor" />

        <TextView
            android:id="@+id/textview222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:layout_below="@+id/edtexpensetypelist"
            android:text="Select Status"
            android:singleLine="true"
            android:padding="5dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:textColorHint="@color/hintColor"
            android:textSize="13sp" />


        <AutoCompleteTextView
            android:id="@+id/edtexpensestatus"
            android:layout_below="@+id/textview222"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edittext_shape_new"
            android:focusable="false"
            android:hint="Search Status"
            android:fontFamily="@font/inter_regular"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="#000"
            android:drawableRight="@drawable/ic_arrow_spinner"
            android:textColorHint="@color/hintColor"
            android:textSize="14sp"
            android:theme="@style/MyEditTextThemeColor" />

        <RelativeLayout
            android:id="@+id/expense_date_filter"
            android:layout_below="@+id/edtexpensestatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_margin="2dp"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cardSearch_list"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        android:text="From"
                        android:textStyle="bold"
                        android:textColor="#383838"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/cardFrom_list"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_shape_new"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_calendar_new" />


                        <TextView
                            android:id="@+id/tvFrom_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/inter_regular"
                            android:hint="DD-MM-YYYY"
                            android:textColor="#000"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        android:text="To"
                        android:textStyle="bold"
                        android:textColor="#383838"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/cardTo_list"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_shape_new"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_calendar_new" />

                        <TextView
                            android:id="@+id/tvTo_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/inter_regular"
                            android:hint="DD-MM-YYYY"
                            android:textColor="#000"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@id/cardSearch_list"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="22dp"
                android:background="@drawable/edittext_shape_new">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_search_customer" />

            </RelativeLayout>
        </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_expense"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        android:layout_below="@+id/expense_date_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/report_expenselistlayout"/>

        <ImageView
            android:id="@+id/img_create"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add_blue2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/rel_create_expense"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearTop_expense"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/textview11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Select Expense Type"
                android:singleLine="true"
                android:padding="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />


            <AutoCompleteTextView
                android:id="@+id/edtexpensetype"
                android:layout_below="@+id/textview11"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/edittext_shape_new"
                android:focusable="false"
                android:hint="Select type"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textColor="#000"
                android:drawableRight="@drawable/ic_arrow_spinner"
                android:textColorHint="@color/hintColor"
                android:textSize="14sp"
                android:theme="@style/MyEditTextThemeColor" />


            <TextView
                android:id="@+id/textview1"
                android:layout_below="@+id/edtexpensetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Select Expense Date"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/cardFromm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textview1"
                android:layout_gravity="start"
                android:background="@drawable/edittext_shape_new"
                android:gravity="start">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_calendar_new" />


                <TextView
                    android:id="@+id/tvFrom111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/inter_regular"
                    android:hint="DD-MM-YYYY"
                    android:textColor="#000"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel_expenseee"
                android:visibility="gone"
                android:layout_below="@+id/cardFromm">

                <TextView
                    android:id="@+id/textview_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Rate"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#383838"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_claim_rate"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textview_rate"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-5dp"
                    android:enabled="false"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Rate"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/black_87"
                    android:textColorHint="@color/hintColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <View
                    android:id="@+id/view_1"
                    android:layout_below="@+id/tv_claim_rate"
                    android:layout_width="match_parent"
                    android:layout_marginTop="-6dp"
                    android:layout_height="1dp"
                    android:background="@color/black_87"/>

                <TextView
                    android:id="@+id/textview_start_km"
                    android:layout_below="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Start Km"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#383838"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/edt_start_km"
                    android:layout_below="@+id/textview_start_km"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/inter_regular"
                    android:text=""
                    android:hint="km"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textColor="@color/black_87"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textview_stop_km"
                    android:layout_below="@+id/edt_start_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Stop Km"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#383838"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/edt_stop_km"
                    android:layout_below="@+id/textview_stop_km"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/inter_regular"
                    android:text=""
                    android:hint="Km"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textColor="@color/black_87"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textview_total_km"
                    android:layout_below="@+id/edt_stop_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Total Km"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#383838"
                    android:textStyle="bold"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_total_km"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/textview_total_km"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Km"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/black_87"
                    android:textColorHint="@color/hintColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view_2"
                    android:layout_below="@+id/tv_total_km"
                    android:layout_width="match_parent"
                    android:layout_marginTop="-6dp"
                    android:layout_height="1dp"
                    android:background="@color/black_87"/>

            </RelativeLayout>



            <TextView
                android:id="@+id/textview2"
                android:layout_below="@+id/rel_expenseee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Claim Amount"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/tv_claim_amt"
                android:layout_below="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/inter_regular"
                android:drawableLeft="@drawable/ic_rupees"
                android:hint="Total Amt"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textColor="@color/colur_light_blue"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/textview3"
                android:layout_below="@+id/tv_claim_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Expense Note"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_exp_note"
                android:layout_below="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/inter_regular"
                android:hint="Enter note"
                android:maxLines="4"
                android:padding="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textview4"
                android:layout_below="@+id/edt_exp_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Expense Attachment"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#383838"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textview41"
                android:layout_below="@+id/edt_exp_note"
                android:layout_toRightOf="@+id/textview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="(Should be less then 5 MB)"
                android:layout_marginLeft="-5dp"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#C53636"
                android:textStyle="bold"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/img_add_attachment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/textview4"
                android:src="@drawable/ic_add_attachment" />


                    <ListView
                        android:id="@+id/listView_attach"
                        android:layout_below="@+id/img_add_attachment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="2dp"
                        android:padding="0dp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_sub"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_below="@+id/listView_attach"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:cardBackgroundColor="@color/colur_dark_blue"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvsubmitt_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>




        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>



    </RelativeLayout>