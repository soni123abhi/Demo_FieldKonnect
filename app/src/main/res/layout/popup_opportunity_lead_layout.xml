<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colur_dark_blue"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">


            <TextView
                android:id="@+id/textview_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_close"
                android:fontFamily="@font/inter_semibold"
                android:text="Opportunity"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:textAllCaps="true"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:src="@drawable/ic_cross_blue" />

            <View
                android:layout_below="@+id/textview_head"
                android:id="@+id/vline1"
                android:background="#EBEBEB"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <RelativeLayout
                android:id="@+id/reeell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/vline1"
                android:padding="10dp">


                <AutoCompleteTextView
                    android:id="@+id/edtamount"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:drawableLeft="@drawable/ic_rupees"
                    android:drawablePadding="5dp"
                    android:hint="620"
                    android:inputType="number"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />

                <RelativeLayout
                    android:id="@+id/rell_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_shape_new"
                    android:layout_below="@+id/edtamount">

                    <TextView
                        android:id="@+id/tv_confidence_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="CONFIDENCE"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <!-- Confidence Value -->
                    <TextView
                        android:id="@+id/tv_confidence_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_below="@+id/tv_confidence_label"
                        android:text="50%"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:layout_marginTop="4dp" />

                    <!-- SeekBar -->
                    <SeekBar
                        android:id="@+id/seekBar_confidence"
                        android:layout_below="@+id/tv_confidence_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:progress="50"
                        android:max="100"
                        android:progressTint="#007BFF"
                        android:thumbTint="#007BFF" />

                </RelativeLayout>


                <AutoCompleteTextView
                    android:id="@+id/edtusername"
                    android:layout_below="@+id/rell_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="User Name"
                    android:focusable="false"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:drawableRight="@drawable/ic_arrow_spinner"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />


                <AutoCompleteTextView
                    android:id="@+id/edtmobile"
                    android:layout_below="@+id/edtusername"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />


                <AutoCompleteTextView
                    android:id="@+id/edtcontact"
                    android:layout_below="@+id/edtmobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Contact"
                    android:focusable="false"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:drawableRight="@drawable/ic_arrow_spinner"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />


                <AutoCompleteTextView
                    android:id="@+id/edtnote"
                    android:layout_below="@+id/edtcontact"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Note"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />


                <AutoCompleteTextView
                    android:id="@+id/edtdate"
                    android:layout_below="@+id/edtnote"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Estimated Close Date*"
                    android:focusable="false"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_lead_date_new"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />


                <AutoCompleteTextView
                    android:id="@+id/edtstatus"
                    android:layout_below="@+id/edtdate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Status"
                    android:focusable="false"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:drawableRight="@drawable/ic_arrow_spinner"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />




                <LinearLayout
                    android:id="@+id/linnnnbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtstatus"
                    android:layout_marginTop="20dp"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardcancel"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="20dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="#DB2A3C"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_semibold"
                            android:text="Cancel"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardsave"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/colur_dark_blue"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_semibold"
                            android:text="Save"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>



                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>
