<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg_colour_two">

    <FrameLayout
        android:id="@+id/fragment_container_tour"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/linearTop_tour"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBack_tour"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_back" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTitle_tour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cardBack_tour"
                android:fontFamily="@font/inter_semibold"
                android:text="Tour Plan"
                android:textColor="#000"
                android:textSize="14sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rec_user_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearTop_tour"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/textview11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Select Branch Name"
            android:singleLine="true"
            android:padding="5dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:textColorHint="@color/hintColor"
            android:textSize="13sp" />


        <AutoCompleteTextView
            android:id="@+id/edtSearchbranch"
            android:layout_below="@+id/textview11"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edittext_shape_new"
            android:focusable="false"
            android:hint="Search Branch"
            android:fontFamily="@font/inter_regular"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="#000"
            android:drawableRight="@drawable/ic_arrow_spinner"
            android:textColorHint="@color/hintColor"
            android:textSize="14sp"
            android:theme="@style/MyEditTextThemeColor" />


        <TextView
            android:id="@+id/textview1"
            android:layout_below="@+id/edtSearchbranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Select User Name"
            android:singleLine="true"
            android:padding="5dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:textColorHint="@color/hintColor"
            android:textSize="13sp" />


        <AutoCompleteTextView
            android:id="@+id/edtSearch"
            android:layout_below="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edittext_shape_new"
            android:focusable="false"
            android:hint="Search User"
            android:fontFamily="@font/inter_regular"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="#000"
            android:drawableRight="@drawable/ic_arrow_spinner"
            android:textColorHint="@color/hintColor"
            android:textSize="14sp"
            android:theme="@style/MyEditTextThemeColor" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_useractivity"
            android:layout_below="@+id/edtSearch"
            android:layout_marginTop="18dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/report_usertourr"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rec_tour_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearTop_tour"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/user_dateeeee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp">


            <TextView
                android:id="@+id/tv_titt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Create Tour Plan"
                android:textColor="#383838"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_dateeeee"
            android:padding="5dp"
            android:layout_marginTop="2dp">

            <RelativeLayout
                android:id="@+id/tour_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/vieeew11"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>

                <LinearLayout
                    android:id="@+id/lin_create_tour"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:weightSum="3"
                    android:background="#ACE0F4"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textColor="#383838"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/title_visit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Visit Town"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/title_objective"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Objectives"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>
                <View
                    android:id="@+id/vieeew22"
                    android:layout_below="@+id/lin_create_tour"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>


                <LinearLayout
                    android:id="@+id/recyc_visit_table_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/vieeew22"
                    android:orientation="vertical" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/carddd_tourrrrrr"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/recyc_visit_table_input"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/lin_create_input_tour"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:weightSum="3"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_date_create"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="Select Date"
                                android:textColor="#383838"
                                android:textSize="14sp"
                                android:maxLines="2"
                                android:textStyle="normal"
                                android:gravity="center"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#BDBDBD"/>

                            <EditText
                                android:id="@+id/tv_visit_create"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="Enter City"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:maxLines="2"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:backgroundTint="@android:color/transparent" />

                            <!--
                                                    <TextView
                                                        android:id="@+id/tv_visit_create"
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="1"
                                                        android:hint="Select City"
                                                        android:textSize="14sp"
                                                        android:maxLines="2"
                                                        android:textColor="#000"
                                                        android:textStyle="normal"
                                                        android:gravity="center"/>
                            -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#BDBDBD"/>
                            <EditText
                                android:id="@+id/edt_objective_create"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="Enter Objectives"
                                android:textSize="14sp"
                                android:textColor="#000"
                                android:maxLines="2"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:backgroundTint="@android:color/transparent" />

                        </LinearLayout>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <ImageView
                    android:id="@+id/btn_addmore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add"
                    android:layout_below="@+id/carddd_tourrrrrr"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardbtn_submit_tour"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/carddd_tourrrrrr"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/colur_dark_blue"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_semibold"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>



            </RelativeLayout>
        </ScrollView>




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rec_tour_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/linearTop_tour"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/user_view_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp">


            <TextView
                android:id="@+id/tv_titt_dat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Tour Plan"
                android:textColor="#383838"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_tour_user"
                android:layout_below="@+id/tv_titt_dat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:hint="Abhishek Soni"
                android:textColor="#383838"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tour_date_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_view_tt"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cardSearch"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        android:text="From"
                        android:textStyle="bold"
                        android:textColor="#383838"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/cardFrom"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edittext_shape_new"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_calendar_new" />


                        <TextView
                            android:id="@+id/tvFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/inter_regular"
                            android:hint="DD-MM-YYYY"
                            android:textColor="#000"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        android:text="To"
                        android:textStyle="bold"
                        android:textColor="#383838"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/cardTo"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_shape_new"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_calendar_new" />

                        <TextView
                            android:id="@+id/tvTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/inter_regular"
                            android:hint="DD-MM-YYYY"
                            android:textColor="#000"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@id/cardSearch"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_shape_new">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_search_customer" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/tour_view_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cardbtn_edit_tour_view"
            android:layout_below="@+id/tour_date_filter"
            android:padding="5dp"
            android:layout_marginTop="8dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_tour_view_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="@android:color/transparent"
                android:outlineSpotShadowColor="@android:color/transparent"
                android:visibility="gone"
                app:cardCornerRadius="5dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/textview_nfs_parameter"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Select"
                            android:background="#ACE0F4"
                            android:textAlignment="center"
                            android:textColor="#383838"
                            android:textSize="15dp"
                            android:textStyle="bold" />
<!--
                        <CheckBox
                            android:id="@+id/checkbox_all"
                            android:layout_width="80dp"
                            android:layout_height="45dp"
                            android:padding="0dp"
                            android:text="Select"
                            android:background="#ACE0F4"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
-->


                        <TextView
                            android:id="@+id/textview_nfs_reader1"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/textview_nfs_parameter"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="#ACE0F4"
                            android:text="Date"
                            android:textColor="#383838"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textview_nfs_reader2"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/textview_nfs_reader1"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="#ACE0F4"
                            android:text="Visit Town"
                            android:textColor="#383838"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/textview_nfs_reader4"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/textview_nfs_reader2"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="#ACE0F4"
                            android:text="Objective"
                            android:textColor="#383838"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/textview_nfs_reader5"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/textview_nfs_reader4"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="Status"
                            android:background="#ACE0F4"
                            android:textColor="#383838"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

<!--
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_tour_view_table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textview_nfs_reader5"
                            android:layout_marginTop="2dp"
                            android:nestedScrollingEnabled="false"
                            tools:listitem="@layout/report_tour_view_table"/>
-->

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_marginTop="2dp"
                            android:layout_below="@+id/textview_nfs_reader5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/recyclerview_tour_view_table"
                                tools:listitem="@layout/report_tour_view_table"
                                android:orientation="vertical" />

                        </ScrollView>


                    </RelativeLayout>
                </HorizontalScrollView>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>



        <androidx.cardview.widget.CardView
            android:id="@+id/cardbtn_edit_tour_view"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colur_dark_blue"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardbtn_submit_tour_view"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colur_dark_blue"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </androidx.cardview.widget.CardView>




    </RelativeLayout>





</RelativeLayout>
