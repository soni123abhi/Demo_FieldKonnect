<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="2sp"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:clickable="false"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_view_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkbox"
        android:gravity="center"
        android:padding="10dp"
        android:hint="yy-mm-dd"
        android:textColor="#383838"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_view_visit"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_view_date"
        android:gravity="center"
        android:padding="10dp"
        android:hint="Visit Town"
        android:textColor="#383838"
        android:textSize="15dp"
        android:enabled="false"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <EditText
        android:id="@+id/edt_view_objective"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/edt_view_visit"
        android:gravity="center"
        android:padding="10dp"
        android:hint="Objective"
        android:enabled="false"
        android:textColor="#383838"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_view_status"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/edt_view_objective"
        android:gravity="center"
        android:padding="10dp"
        android:hint="Status"
        android:textColor="#383838"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <View
        android:layout_width="622dp"
        android:layout_height="2dp"
        android:layout_below="@+id/tv_view_status"
        android:background="@color/hintColor" />



</RelativeLayout>
