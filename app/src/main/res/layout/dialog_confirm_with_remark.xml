<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvMessage"
        android:text="Are you sure you want to proceed?"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etRemark"
        android:hint="Enter remark"
        android:layout_marginTop="10dp"
        android:minHeight="100dp"
        android:padding="10dp"
        android:textColor="#000"
        android:visibility="gone"
        android:gravity="start"
        android:textSize="14dp"
        android:background="@drawable/edittext_shape_new_lead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rell_attachement"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Attachment"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:textColorHint="@color/hintColor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textview41"
            android:layout_toRightOf="@+id/textview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="(Should be less then 5 MB)"
            android:layout_marginLeft="-5dp"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#C53636"
            android:textStyle="bold"
            android:textColorHint="@color/hintColor"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/img_add_attachment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textview4"
            android:src="@drawable/ic_add_attachment" />


        <ListView
            android:id="@+id/listView_attach"
            android:layout_below="@+id/img_add_attachment"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:divider="@android:color/transparent"
            android:dividerHeight="2dp"
            android:padding="0dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="true"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bg_loc_red"
            android:layout_marginEnd="10dp"
            app:cardElevation="2dp">

            <TextView
                android:text="Cancel"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnYes"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colur_light_blue"
            app:cardElevation="2dp">

            <TextView
                android:text="Yes"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
