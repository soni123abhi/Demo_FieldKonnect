<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colur_dark_blue"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">


            <TextView
                android:id="@+id/textview_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_close"
                android:fontFamily="@font/inter_semibold"
                android:text="Lead Edit"
                android:layout_marginLeft="5dp"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:src="@drawable/ic_cross_blue" />

            <View
                android:layout_below="@+id/textview_head"
                android:id="@+id/vline1"
                android:background="#EBEBEB"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <RelativeLayout
                android:id="@+id/reeell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vline1"
                android:padding="10dp">


                <AutoCompleteTextView
                    android:id="@+id/edtleadassign"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:focusable="false"
                    android:hint="Assign To"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:drawableRight="@drawable/ic_arrow_spinner"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />


                <AutoCompleteTextView
                    android:id="@+id/edtleadtype"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/edtleadassign"
                    android:background="@drawable/edittext_shape_new"
                    android:focusable="false"
                    android:hint="Lead Type"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />

                <AutoCompleteTextView
                    android:id="@+id/edtleadsource"
                    android:layout_below="@+id/edtleadtype"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:focusable="false"
                    android:hint="Lead Source"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />


                <AutoCompleteTextView
                    android:id="@+id/edtfirmname"
                    android:layout_below="@+id/edtleadsource"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Firm Name"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />


                <AutoCompleteTextView
                    android:id="@+id/edtcustomername"
                    android:layout_below="@+id/edtfirmname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Customer Name"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />

                <AutoCompleteTextView
                    android:id="@+id/edtwebsite"
                    android:layout_below="@+id/edtcustomername"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Website"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />


                <AutoCompleteTextView
                    android:id="@+id/edtmobno"
                    android:layout_below="@+id/edtwebsite"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />

                <AutoCompleteTextView
                    android:id="@+id/edtemail"
                    android:layout_below="@+id/edtmobno"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Email Id"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />

                <AutoCompleteTextView
                    android:id="@+id/edtadd"
                    android:layout_below="@+id/edtemail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Address"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />

                <LinearLayout
                    android:id="@+id/linnnn22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtadd"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/spinnerPin"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edittext_shape_new"
                        android:fontFamily="@font/inter_medium"
                        android:hint="Pin*"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="@color/hintColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtCity"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edittext_shape_new"
                        android:fontFamily="@font/inter_medium"
                        android:hint="City"
                        android:clickable="false"
                        android:enabled="false"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="@color/hintColor"
                        android:textSize="14sp" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/linnnn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linnnn22"
                    android:layout_marginTop="15dp"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/edtState"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_shape_new"
                        android:focusable="false"
                        android:fontFamily="@font/inter_medium"
                        android:hint="State"
                        android:paddingLeft="10dp"
                        android:clickable="false"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="@color/hintColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtdistric"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_shape_new"
                        android:focusable="false"
                        android:fontFamily="@font/inter_medium"
                        android:hint="District"
                        android:paddingLeft="10dp"
                        android:clickable="false"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="@color/hintColor"
                        android:textSize="14sp" />

                </LinearLayout>


                <AutoCompleteTextView
                    android:id="@+id/edtotherrr"
                    android:layout_below="@+id/linnnn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_shape_new"
                    android:hint="Other"
                    android:visibility="gone"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />



                <AutoCompleteTextView
                    android:id="@+id/edtnote"
                    android:layout_below="@+id/edtotherrr"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_shape_new"
                    android:gravity="start"
                    android:hint="Note"
                    android:fontFamily="@font/inter_regular"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditTextThemeColor" />



                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSubmit"
                    android:layout_below="@+id/edtnote"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colur_dark_blue"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>





            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>
