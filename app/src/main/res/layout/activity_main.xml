<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_colour_two"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_colour_two"
        tools:context=".activity.MainActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/linearTop"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/three_dot"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_bar" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_toRightOf="@+id/three_dot"
                    android:id="@+id/cardBurger"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/gajra_gear_log" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_toRightOf="@+id/cardBurger"
                    android:id="@+id/cardBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_back" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/lineee_logos"
                    android:layout_toRightOf="@+id/cardBack"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:visibility="invisible"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_bediya" />
                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/ic_silver" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardleave"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_marginRight="80dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/bluenew"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tvCardleave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_semibold"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Leave"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvPunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Punch In"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/linearInOut"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:visibility="visible"
                    android:weightSum="1">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPunch"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/bluenew"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/tvCardPunch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_semibold"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Punch In"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearProfile"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfileHeader"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp" />

                    <TextView
                        android:id="@+id/tvNameHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:minWidth="56dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:visibility="gone" />


                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <FrameLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearBottom"
            android:layout_below="@+id/linearTop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_above="@id/linearBottom"
            android:background="@drawable/bottom_tab_shadow" />


        <LinearLayout
            android:id="@+id/linearBottom"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:weightSum="4">

            <RelativeLayout
                android:id="@+id/relativeHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgHome"
                        android:layout_width="20dp"
                        android:layout_height="19dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_home_new" />

                    <TextView
                        android:id="@+id/tvHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Home"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgCHome"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/half_circle" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLeads"
                android:layout_width="0dp"
                android:visibility="visible"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgLeads"
                        android:layout_width="25dp"
                        android:layout_height="19dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_lead_unselect" />

                    <TextView
                        android:id="@+id/tvLeads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Customers"
                        android:textColor="#828282"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgCLead"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/half_circle"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativemarketing"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearmarketing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgmarket"
                        android:layout_width="25dp"
                        android:layout_height="19dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_lead_unselect" />

                    <TextView
                        android:id="@+id/tvmarket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/market_intelligence"
                        android:textColor="#828282"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgmarkettt"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/half_circle"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeBeats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgBeat"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_beat_new_unselect" />

                    <TextView
                        android:id="@+id/tvBeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Task"
                        android:textColor="#828282"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgCBeat"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/half_circle"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeStatement"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgState"
                        android:layout_width="21dp"
                        android:layout_height="19dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_statement_new_unselect" />

                    <TextView
                        android:id="@+id/tvState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="History"
                        android:textColor="#828282"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgCStatement"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/half_circle"
                    android:visibility="invisible" />

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_drawer_support"
                    android:drawablePadding="10dp"
                    android:text="Customer Care - +91 9713113280"
                    android:textColor="#373435"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Name"
                        android:textColor="#393939"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tvMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="Mobile"
                        android:textColor="#393939"
                        android:textSize="14sp" />

                </LinearLayout>


            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeHeader"
                android:layout_marginBottom="10dp"
                android:clipToPadding="false"
                android:paddingBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relativeProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvStatement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/ic_drawer_profile"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="15dp"
                            android:text="My Profile"
                            android:textColor="#393939"
                            android:textSize="14sp" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/relativeOrderHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/ic_drawer_history"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="15dp"
                            android:text="Order History"
                            android:textColor="@color/black_393939"
                            android:textSize="14sp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/relativeReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/report" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/inter_semibold"
                            android:paddingLeft="10dp"
                            android:paddingTop="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="15dp"
                            android:text="Report"
                            android:textColor="@color/black_393939"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/relativecatelog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/report" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/inter_semibold"
                            android:paddingLeft="10dp"
                            android:paddingTop="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="15dp"
                            android:text="Documents"
                            android:textColor="@color/black_393939"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/relativebeat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="15dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/ic_beat_new" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/inter_semibold"
                            android:paddingLeft="10dp"
                            android:paddingTop="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="15dp"
                            android:text="Beat"
                            android:textColor="@color/black_393939"
                            android:textSize="14sp" />


                    </LinearLayout>



                    <!--
                                        <LinearLayout
                                            android:id="@+id/relativeNotification"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp">

                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="15dp"
                                                android:background="@drawable/bell" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:fontFamily="@font/inter_semibold"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="15dp"
                                                android:paddingRight="15dp"
                                                android:paddingBottom="15dp"

                                                android:text="Notification"
                                                android:textColor="@color/black_393939"
                                                android:textSize="14sp" />


                                        </LinearLayout>
                    -->


                    <RelativeLayout
                        android:id="@+id/relativemspActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/ic_drawer_other_activity"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="15dp"
                            android:text="MSP Activity"
                            android:textColor="@color/black_393939"
                            android:textSize="14sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/ic_drawer_logout"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="15dp"
                            android:text="Logout"
                            android:textColor="@color/black_393939"
                            android:textSize="14sp" />


                    </RelativeLayout>


                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
